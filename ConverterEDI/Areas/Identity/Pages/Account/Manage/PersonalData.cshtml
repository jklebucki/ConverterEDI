@page
@model PersonalDataModel
@{
ViewData["Title"] = "Moje konto";
ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Twoje konto zawiera wszystkie dane które zostały przez Ciebie wprowadzone podczas jego zakładania.</p>
        <p>
            <strong>Jeśli wybierzesz opcję Usuń twoje konto zostanie bezpowrotnie skasowane.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Pobierz</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Usuń</a>
        </p>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}